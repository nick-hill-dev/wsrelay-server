{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceRoot": "./src",
    "sourceMap": true,
    "outDir": "./bin",
  }
}